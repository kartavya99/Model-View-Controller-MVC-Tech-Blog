<div>
  <div>
    <h1>{{posts.title}}</h1>
    <p>{{posts.content}}</p>
    {{#each posts.comments as |comment| }}
    {{> allcomments comment}}
    {{/each}}
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
</div>
         
<form id="edit-post-form" class="card-body"> 
  <div> 
    <label for="post-title" class="form-label">Title</label>
  </div>

  <input type="text" name="post-title" id="post-title" cols="50" rows="1" value="{{posts.title}}" class="form-input" />
    
          
  <div>
    <br>
    <label class="form-label" for="content">Content</label>
  </div>

  <div>       
    <textarea name="content" id="post-content" cols="50" rows="5" class="form-input">{{posts.content}}</textarea>
  </div>
        <br>

  <div>
    <button type="button" id="update-btn" class="btn btn-light">Update</button>
    <button type="button" id="delete-btn" class="btn btn-light">Delete</button>       
  </div>
</form>

</div>

<script src="/js/editPost.js"></script>
<script src="/js/deletePost.js"></script>