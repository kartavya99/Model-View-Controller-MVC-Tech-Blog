<div class="card">
  <div class="card-body">
    <h3 class="card-header">Sign Up</h3>
    <form class="signup-form">
      <div class="form-group">
        <label for="username-signup">Name</label>
        <input
          type="text"
          class="form-control"
          id="name-signup"
          autofocus="true"
          class
          aria-describedby="username"
        />
      </div>
      <div class="form-group">
        <label for="username-signup">Email</label>
        <input
          type="text"
          class="form-control"
          id="email-signup"
          autofocus="true"
          class
          aria-describedby="username"
        />
      </div>
      <div class="form-group">
        <label for="password-signup">Password</label>
        <input
          type="password"
          class="form-control"
          autofocus="true"
          id="password-signup"
        />
      </div>
      <button type="submit" class="btn btn-light">Signup!</button>
      <hr />
      <a class="login-link" href="/login">login instead</a>
    </form>

  </div>
</div>

<script src="js/signup.js"></script>