<div>
  <div>
   
    <h1>{{posts.title}}</h1>
    <H2>{{posts.content}}</H2>
    {{!-- <h3>{{posts.comments}}</h3> --}}

     {{#each posts.comments as |comment| }}
      {{> allcomments comment}}
      {{/each}}

  </div>
</div>
<div class="card" id="comment">
  <h3 class="card-header new-post">Create New Comment</h3>
  <form class="card-body new-post-form" id="new-post-form">
    <div>
      <textarea name="content" id="new-comment" cols="50" rows="5"></textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-light">Submit</button>
  </form>
</div>

<script src="/js/comment.js"></script>