<div>
{{#each posts as |post| }}
  {{> editpost post}}
  {{/each}}

</div>

{{!-- add form to create a post --}}
<div class="card">
    <h3 class="card-header new-post">Create New Post</h3>
    <form class="card-body new-post-form" id="new-post-form">
        <div> 
          <label for="post-title" class="form-label">Title</label>
        </div>
          <textarea name="post-title" id="post-title" cols="50" rows="1"></textarea>
        <div>
          <label class="form-label" for="content">Content</label>
        </div>
        <div>
          <textarea name="content" id="content" cols="100" rows="5"></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-light">Submit</button>
    </form>
</div>
 
 <script src="js/createPost.js"></script>